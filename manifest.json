{
  "manifest_version": 2,
  "name": "Default Scroll",
  "version": "1.0",
  "description": "Block pages from messing with the scroll behaviour.",
  "homepage_url": "https://github.com/mbakhoff/default-scroll",
  "browser_specific_settings": {
    "gecko": {
      "id": "default-scroll@mbakhoff.github.com"
    }
  },
  "icons": {
    "48": "ic_mouse_48px.svg"
  },
  "permissions": ["tabs", "<all_urls>"],
  "browser_action": {
    "default_icon": "ic_mouse_48px.svg",
    "default_title": "Toggle default scroll"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
